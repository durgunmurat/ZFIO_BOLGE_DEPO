<mvc:View
    controllerName="com.sut.bolgeyonetim.controller.PasswordReset"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    <Page
        showNavButton="true"
        navButtonPress="onNavBack"
        title="Şifre Sıfırlama"
        class="authBackground">
        <content>
            <VBox alignItems="Center" justifyContent="Center" class="sapUiMediumMargin">
                <Panel class="loginForm" backgroundDesign="Transparent">
                    <f:SimpleForm
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1">
                        <f:content>
                            <Label text="Sicil Numarası"/>
                            <Input
                                id="idResetUserInput"
                                type="Text"
                                required="true"
                                placeholder="Sicil numaranızı girin"/>
                            <Button
                                text="SMS Kodu Gönder"
                                type="Emphasized"
                                press="onSendSmsPress"
                                width="100%"
                                class="sapUiSmallMarginTop"/>
                        </f:content>
                    </f:SimpleForm>
                </Panel>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Text text="Demo sicil numaraları: 10268, 2542"/>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>