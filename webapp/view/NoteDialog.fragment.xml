<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <Dialog
    title="Not Yönetimi"
    contentWidth="500px"
    contentHeight="200px"
  >
    <content>
      <VBox class="sapUiSmallMargin">
        <Label
          text="Yeni Not Ekle"
          labelFor="idNoteInput"
          class="sapUiTinyMarginBottom"
        />

        <TextArea
          id="idNoteInput"
          value="{noteDialogModel>/newNote}"
          rows="3"
          maxLength="255"
          placeholder="Max 255 karakter..."
          width="100%"
        />
      </VBox>
    </content>
    <buttons>
      <Button
        text="Kaydet"
        type="Emphasized"
        press="onSaveNote"
        enabled="true"
      />
      <Button
        text="Çıkış"
        press="onCloseNoteDialog"
      />
    </buttons>
  </Dialog>
</core:FragmentDefinition>
