<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDepositAddDialog"
        title="Harici Depozito Ekle"
        contentWidth="95%"
        stretch="{device>/isPhone}"
        verticalScrolling="true"
        horizontalScrolling="false"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <MessageStrip
                    text="Aşağıdaki listeden harici depozito malzemelerinin miktarlarını giriniz."
                    type="Information"
                    showIcon="true"
                    class="sapUiSmallMarginBottom"
                />
                <Table
                    id="idDepositAddTable"
                    items="{depositAddModel>/items}"
                    growing="false"
                    noDataText="Harici depozito malzemesi bulunamadı"
                    fixedLayout="true"
                >
                    <columns>
                        <Column width="60%">
                            <Text text="Malzeme Adı" />
                        </Column>
                        <Column width="40%" hAlign="Center">
                            <Text text="Miktar" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            highlight="{= ${depositAddModel>IsExternal} ? 'Success' : (${depositAddModel>IsExisting} ? 'None' : 'Information') }"
                        >
                            <cells>
                                <Text text="{depositAddModel>Maktx}" wrapping="true" />
                                <StepInput
                                    value="{depositAddModel>Quantity}"
                                    min="0"
                                    max="999"
                                    step="1"
                                    width="100%"
                                    displayValuePrecision="0"
                                    textAlign="Center"
                                    enabled="{= !${depositAddModel>IsExisting} || ${depositAddModel>IsExternal} }"
                                    change="onDepositQuantityChange"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <buttons>
            <Button
                id="idDepositSaveBtn"
                text="Kaydet"
                type="Emphasized"
                press="onDepositAddSave"
            />
            <Button
                text="İptal"
                type="Transparent"
                press="onDepositAddCancel"
            />
        </buttons> 
    </Dialog>
</core:FragmentDefinition>
