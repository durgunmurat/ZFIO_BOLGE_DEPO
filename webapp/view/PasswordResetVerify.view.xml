<mvc:View
    controllerName="com.sut.bolgeyonetim.controller.PasswordResetVerify"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    <Page
        showNavButton="true"
        navButtonPress="onNavBack"
        title="Şifre Sıfırlama">
        <content>
            <VBox alignItems="Center" justifyContent="Center" class="sapUiMediumMargin">
                <f:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1">
                    <f:content>
                        <Label text="SMS Kodu"/>
                        <Input
                            id="smsCodeInput"
                            type="Number"
                            maxLength="6"
                            placeholder="SMS ile gelen kodu girin"/>
                        <Button
                            text="Kodu Doğrula"
                            type="Emphasized"
                            press="onVerifyCode"
                            width="100%"
                            class="sapUiSmallMarginTop"/>
                        <Link
                            text="SMS Kodunu Tekrar Gönder"
                            press="onResendCode"
                            textAlign="Center"
                            width="100%"
                            class="sapUiSmallMarginTop"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Text text="Demo SMS kodu: 727061"/>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>